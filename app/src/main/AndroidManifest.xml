<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.homeassignment.softunitrainingdemo" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SecondActivity"
            android:label="@string/title_activity_second" >
        </activity>
        <activity
            android:name=".SimpleListAdapter"
            android:label="@string/title_activity_simple_list_adapter" >
        </activity>
        <activity
            android:name=".CustomListAdapter"
            android:label="@string/title_activity_custom_list_adapter" >
        </activity>
        <activity
            android:name=".TickTackToe"
            android:label="@string/title_activity_tick_tack_toe" >
        </activity>
    </application>
    <uses-permission android:name="android.permission.INTERNET" />
    <!--<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>-->

</manifest>
